<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ofuscado"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="109dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        app:srcCompat="@drawable/aguacate2" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:fontFamily="@font/yeon_sung"
        android:gravity="center"
        android:text="VitaVerde"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.014" />

    <TextView
        android:id="@+id/txt_description_login"
        android:layout_width="325dp"
        android:layout_height="17dp"
        android:fontFamily="@font/yeon_sung"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:text="Llevamos lo mejor del huerto hasta tu puerta"
        android:textColor="@color/text_description"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_login"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/txt_login"
        app:layout_constraintTop_toBottomOf="@+id/txt_login"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/txt_inicia_sesion"
        android:layout_width="138dp"
        android:layout_height="24dp"
        android:layout_marginTop="216dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:text="Inicia SesiÃ³n"
        android:textColor="@color/text_description"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_description_login"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/txt_description_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <EditText
        android:id="@+id/id_email_login"
        android:layout_width="374dp"
        android:layout_height="53dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/icon_mail"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="@string/txt_input_login"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/color_txt_inputs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_password_login"
        android:layout_width="374dp"
        android:layout_height="53dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/icon_lock"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="@string/txt_input_password"
        android:inputType="numberPassword"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/color_txt_inputs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609" />

    <TextView
        android:id="@+id/txt_infor_login"
        android:layout_width="124dp"
        android:layout_height="41dp"
        android:fontFamily="@font/yeon_sung"
        android:gravity="center"
        android:text="@string/txt_infor_login2"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698" />

    <Button
        android:id="@+id/btn_google"
        style="@style/Widget.LoginGoogle.SimpleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn_google"
        android:drawableStart="@drawable/icon_lock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_infor_login"
        app:layout_constraintStart_toStartOf="@+id/txt_infor_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />
</androidx.constraintlayout.widget.ConstraintLayout>